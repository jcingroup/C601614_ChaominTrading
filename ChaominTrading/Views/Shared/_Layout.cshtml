<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <title>朝敏國際貿易::@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("css", false)
</head>

<body class="@ViewBag.BodyClass">
    <div id="wrapper">
        <header id="header">
            <div class="wrap">
                <h1 class="logo" onclick="location.href='@Url.Content("~/index")'" title="回首頁" tabindex="-1">
                    @Resources.Res.System_FrontName
                </h1>
                <nav id="menu" class="navbar">
                    <a href="~/AboutUs" class="@(ViewBag.BodyClass == "AboutUs" ? "current" : "")">關於我們</a>
                    <a href="~/Products/Import_list" class="@(ViewBag.BodyClass == "Products" ? "current" : "")">進口</a>
                    <a href="~/Products/Export_list" class="@(ViewBag.BodyClass == "Products" ? "current" : "")">出口</a>
                    <a href="~/News" class="@(ViewBag.BodyClass == "News" ? "current" : "")" href="~/News">最新消息</a>
                    <a href="~/ContactUs" class="@(ViewBag.BodyClass == "ContactUs" ? "current" : "")">聯絡我們</a>
                </nav>
                <nav class="top-nav">
                    <a href="@Url.Action("SetLanguage")?L=en-US&A=index">EN</a>
                    <a href="@Url.Action("SetLanguage")?L=zh-TW&A=index">中文</a>
                    <a href="@Url.Action("SetLanguage")?L=ja-JP&A=index">日文</a>
                </nav>
            </div><!-- wrap //-->
        </header>

        <main id="main">
            @RenderBody()
        </main>

    </div><!-- wrapper //-->

    <footer id="footer">
        <div class="wrap">
            <section class="col-4">
                <h1 class="logo-s text-center" onclick="location.href='@Url.Content("~/index")'" title="回首頁" tabindex="-1">朝敏國際貿易</h1>
                <dl class="foot-contact">
                    <dt>桃園縣中壢市中正路1451號(後方)</dt>
                    <dd><em>TEL:</em>03-280-5358</dd>
                    <dd><em>FAX:</em>03-280-6918</dd>
                    <dd><em>E-MAIL:</em><a href="mailto:chaomintrading@gmail.com">chaomintrading@gmail.com</a><dd>
                </dl>
            </section>

            <section class="col-3 foot-nav">
                <h4 class="font-sp">NAVIGATION</h4>
                <nav>
                    <a href="">關於我們</a>
                    <a href="">進口</a>
                    <a href="">出口</a>
                    <a href="">最新消息</a>
                    <a href="">聯絡我們</a>
                </nav>
            </section>

            <section class="float-r">
                <a class="logo-a-s" href="//www.chaomin.com.tw" target="_blank">朝敏菓菜</a>
                <div class="copyright">CHAOMIN &copy; 2016</div>
            </section>
        </div><!-- wrap -->
    </footer><!-- footer -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
