        <input id="tel" type="text" class="form-element" name="電話">

        <label for="email" class="form-element-label">E-mail</label>
        <input id="email" type="text" class="form-element" name="E-mail">

        <label class="form-element-label">內容</label>
        <textarea rows="5" class="form-element" name="內容"></textarea>

        <button class="btn m-t-24">確認送出</button>

        <input type="hidden" name="accept" value="chaomintrading@gmail.com">
