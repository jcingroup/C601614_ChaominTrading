
@{
    ViewBag.Title = "聯絡我們";
    ViewBag.BodyClass = "ContactUs";
    ViewBag.breadCrumb = "聯絡我們";
}
<script src="../../Scripts/mill-e-fix.js"></script>

<h1 class="title"><span>@ViewBag.breadCrumb</span></h1>

<div class="map"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2484.6621948124116!2d121.19189034908814!3d24.953858992452968!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjTCsDU3JzEzLjkiTiAxMjHCsDExJzM2LjIiRQ!5e0!3m2!1szh-TW!2stw!4v1495174517873" frameborder="0" style="border:0" allowfullscreen></iframe></div>

